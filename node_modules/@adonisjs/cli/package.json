{
  "name": "@adonisjs/cli",
  "version": "5.0.9",
  "description": "Command line tool for Adonisjs",
  "main": "build/index.js",
  "bin": {
    "adonis-next": "build/index.js"
  },
  "files": [
    "build/src",
    "build/ace-manifest.json",
    "build/index.js",
    "build/templates"
  ],
  "keywords": [
    "adonis",
    "adonisjs",
    "cli",
    "installer"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "contributors": [
    "Romain Lanz <romain.lanz@slynova.ch>"
  ],
  "license": "MIT",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && node build/generateManifest.js && copyfiles \"templates/**/*\" build",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-cli.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-cli/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-cli#readme",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^2.1.0",
    "@types/node": "^12.7.8",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "husky": "^3.0.7",
    "japa": "^3.0.1",
    "mrm": "^1.2.2",
    "np": "^5.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@adonisjs/ace": "^6.1.7",
    "@adonisjs/application": "^1.0.14",
    "@adonisjs/fold": "^6.2.1",
    "@adonisjs/sink": "^2.2.1",
    "@poppinss/chokidar-ts": "^1.0.6",
    "boxen": "^4.1.0",
    "change-case": "^3.1.0",
    "copyfiles": "^2.1.1",
    "del": "^5.1.0",
    "execa": "^2.0.4",
    "fs-extra": "^8.1.0",
    "gradient-string": "^1.2.0",
    "nanomatch": "^1.2.13",
    "semver": "^6.3.0"
  },
  "np": {
    "contents": ".",
    "anyBranch": true
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  }
}
